{
  "name": "genip-server",
  "version": "0.0.1",
  "description": "Servidor do Genip",
  "scripts": {
    "test": "jasmine --config=./spec/support/jasmine.json",
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "contributors": [
    "Lucas Barros",
    "Rafael Mota",
    "Luan Brito",
    "Vitor Maia"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "lusca": "^1.6.1",
    "moment": "^2.22.2",
    "mongodb": "^3.1.10",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.34",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jasmine": "^2.8.9",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/mongodb": "^3.0.5",
    "@types/node": "^9.4.6",
    "@types/passport": "^0.4.3",
    "@types/passport-local": "^1.0.32",
    "@types/request": "^2.47.0",
    "@types/request-promise": "^4.1.38",
    "@types/winston": "^2.3.7",
    "concurrently": "^4.1.0",
    "jasmine": "^2.8.0",
    "jasmine-promises": "^0.4.1",
    "nodemon": "^1.18.7",
    "request-promise": "^4.2.2",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  }
}
